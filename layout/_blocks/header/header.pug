mixin header()
    header(class="header")
        div(class="box header__box")
            div(class="header__actions")
                a(href="#5" class="header__logo")
                    p(class="header__title") Black<span class="header__title-color">and</span>White
                    p(class="header__subtitle") Lorem ipsum dolor sit amet
                button(class="button-menu" type="button")
                    span(class="button-menu__container")

            form(class="header__form" method="post" action="#5")
                input(class="header__input" type="text")
                button(class="header__button" type="button") Search

    //END .header
